#include <iostream>
#include <iomanip>
using namespace std;

int main(){
   double amount,temp;
   int year=1;
   cout<<"Please enter the starting amount ";
   cin>>amount;
   temp = amount;
   while((temp+1000)>=amount){
       amount = amount+(amount0.03);
       cout<<fixed;
       cout<<"Year "<<year<<" "<<setprecision(2)<<amount<<endl;
       year = year + 1;

   }

   return 0;
}
